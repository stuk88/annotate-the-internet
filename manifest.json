{
	"manifest_version": 2,

	"name": "Annosurf",
	"description": "Surf the web while annotating the important things.",
	"version": "1.0",

	"permissions": [
		"https://secure.flickr.com/"
	],
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["inject.js"]
		}
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	}
}
